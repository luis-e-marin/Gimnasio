        <Button text="Eliminar" prefWidth="120" onAction="#eliminarEntrenador"/>
        <Button text="Listar" prefWidth="120" onAction="#listarEntrenadores"/>
    </HBox>

    <TextArea fx:id="txtResultado" prefHeight="200" prefWidth="400" wrapText="true"/>
</VBox>

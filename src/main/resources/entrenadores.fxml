<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="uniquindio.edu.co.model.proyecto.viewController.EntrenadorViewController"
      style="-fx-padding: 40">

    <Label text="GestiÃ³n de Entrenadores" style="-fx-font-size: 22px; -fx-font-weight: bold"/>

    <TextField fx:id="txtId" promptText="ID Entrenador"/>
    <TextField fx:id="txtNombre" promptText="Nombre"/>
    <TextField fx:id="txtEspecialidad" promptText="Especialidad"/>
    <TextField fx:id="txtSalario" promptText="Salario"/>

    <HBox spacing="10" alignment="CENTER">
